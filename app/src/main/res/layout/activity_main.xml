<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:gravity="center"
        android:backgroundTint="#001233"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        >

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="40dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            >

        <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                app:icon="@drawable/keyboard_double_arrow_up"
                app:iconSize="90dp"
                android:id="@+id/leftUpBtn"
                app:iconTint="#EEE"
                app:rippleColor="#979dac"
                app:cornerRadius="20dp"
                app:iconPadding="0dp"
                android:backgroundTint="#33415C"
                app:iconGravity="textTop"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="L"
                android:layout_marginVertical="15dp"
                android:textColor="#EEEEEE"
                android:textSize="20sp"
                android:textStyle="bold"
                />

        <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                app:icon="@drawable/keyboard_double_arrow_down"
                app:iconSize="90dp"
                app:iconTint="#EEE"
                android:id="@+id/leftDownBtn"
                app:rippleColor="#979dac"
                app:cornerRadius="20dp"
                app:iconPadding="0dp"
                app:backgroundTint="#33415C"
                app:iconGravity="textTop"
                />

    </LinearLayout>

    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:backgroundTint="#2A2A2A"
            app:cardCornerRadius="20dp"
            android:layout_marginVertical="30dp"
            style="@style/Widget.Material3.CardView.Outlined"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:orientation="vertical"
                >

            <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    app:cornerRadius="15dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/cameraUpBtn"
                    app:icon="@drawable/keyboard_arrow_up"
                    app:iconSize="40dp"
                    app:iconTint="#EEE"
                    app:rippleColor="#b0b5bf"
                    app:iconPadding="0dp"
                    android:backgroundTint="#7D8597"
                    app:iconGravity="textTop"
                    />

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginVertical="30dp"
                    android:src="@drawable/flip_camera_ios"
                    />

            <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    app:cornerRadius="15dp"
                    app:icon="@drawable/keyboard_arrow_up__1_"
                    app:iconSize="40dp"
                    app:iconTint="#EEE"
                    android:id="@+id/cameraDownBtn"
                    app:rippleColor="#b0b5bf"
                    android:layout_marginBottom="20dp"
                    app:iconPadding="0dp"
                    android:backgroundTint="#7D8597"
                    app:iconGravity="textTop"
                    />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:layout_marginVertical="20dp"
            android:layout_weight="4"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                >
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/frame_10"
                    android:layout_marginHorizontal="5dp"/>
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="16/16"
              android:id="@+id/bulletText"
              android:layout_marginHorizontal="5dp"
              android:textColor="#FFF"
              android:textSize="30sp"
              android:textStyle="bold"
                    />
        </LinearLayout>


        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:backgroundTint="#2A2A2A"
                android:layout_marginVertical="20dp"
                app:cardCornerRadius="15dp"
                style="@style/Widget.Material3.CardView.Outlined"
                >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:orientation="horizontal"
                    >

                <com.google.android.material.button.MaterialButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:cornerRadius="10dp"
                        android:backgroundTint="#7D8597"
                        app:icon="@drawable/refresh"
                        android:layout_marginHorizontal="10dp"
                        app:iconTint="#EEE"
                        app:rippleColor="#b0b5bf"
                        android:id="@+id/leftRotateBtn"
                        app:iconSize="40dp"
                        app:iconGravity="textTop"
                        />

                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/stepper_motor_595b40b85ba036ed117dbb7a_1"
                        />

                <com.google.android.material.button.MaterialButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        app:cornerRadius="10dp"
                        android:backgroundTint="#7D8597"
                        app:icon="@drawable/refresh__1_"
                        app:iconTint="#EEE"
                        android:id="@+id/rightRotateBtn"
                        app:rippleColor="#b0b5bf"
                        app:iconSize="40dp"
                        app:iconGravity="top"
                        />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            app:cardCornerRadius="20dp"
            android:layout_marginVertical="30dp"
            android:orientation="vertical"
            android:backgroundTint="#2A2A2A"
            style="@style/Widget.Material3.CardView.Outlined"
            >

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:orientation="vertical"
                >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal"
                    >

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="auto"
                        android:gravity="center_vertical"
                        android:textSize="15dp"
                        android:textColor="#EEE"
                        />

                <com.google.android.material.materialswitch.MaterialSwitch
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:id="@+id/autoReloadSwitch"
                        />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_marginVertical="5dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        app:cornerRadius="10dp"
                        app:icon="@drawable/frame_19"
                        app:iconSize="40dp"
                        android:id="@+id/reloadBtn"
                        app:iconTint="#EEE"
                        app:backgroundTint="#38B000"
                        app:iconGravity="top"
                        />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="reload"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textColor="#EEE"
                        />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_marginVertical="5dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        app:cornerRadius="10dp"
                        app:icon="@drawable/mask_group"
                        app:iconSize="35dp"
                        android:id="@+id/rechargeBtn"
                        app:iconTint="#EEE"
                        app:backgroundTint="#057AF0"
                        app:iconGravity="textTop"
                        />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="recharge"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textColor="#EEE"
                        />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    app:cornerRadius="25dp"
                    app:backgroundTint="#FF5449"
                    app:icon="@drawable/frame_14"
                    app:iconSize="70dp"
                    android:id="@+id/fireBtn"
                    app:iconPadding="0dp"
                    app:iconGravity="textTop"
                    app:iconTint="#EEE"
                    />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="40dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            >

        <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                app:icon="@drawable/keyboard_double_arrow_up"
                app:iconSize="90dp"
                app:iconTint="#EEE"
                app:rippleColor="#979dac"
                app:cornerRadius="20dp"
                android:id="@+id/rightUpBtn"
                app:iconPadding="0dp"
                android:backgroundTint="#33415C"
                app:iconGravity="textTop"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="R"
                android:layout_marginVertical="15dp"
                android:textColor="#EEEEEE"
                android:textSize="20sp"
                android:textStyle="bold"
                />

        <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                app:icon="@drawable/keyboard_double_arrow_down"
                app:iconSize="90dp"
                app:iconTint="#EEE"
                android:id="@+id/rightDownBtn"
                app:rippleColor="#979dac"
                app:cornerRadius="20dp"
                app:iconPadding="0dp"
                app:backgroundTint="#33415C"
                app:iconGravity="textTop"
                />

    </LinearLayout>

</LinearLayout>